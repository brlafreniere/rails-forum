<%= link_to "Post Reply", new_reply_path(post_id: @post.id), class: "btn btn-primary mb-3" %>

<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h5><%= @post.title %></h5>
        </div>
        <div class="card-subtitle">
            <%= link_to @post.author.username, user_path(@post.author) %>
        </div>
        <div class="card-text">
            <%= @post.body %>
        </div>
    </div>
</div>