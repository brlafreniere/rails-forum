<div class="card">
    <div class="card-body">
        <%= form_with(model: @post) do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, class: 'form-control' %>
            </div>

            <div class="form-group">
                <%= f.label :topic_id, "Topic" %>
                <%= f.select :topic_id,
                    options_for_select(
                        Topic.all.order(name: :asc).map{|t| [t.name, t.id]},
                        params[:topic_id]
                    ),
                    {},
                    class: "form-control"
                    %>
            </div>

            <div class="form-group">
                <%= f.submit class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>